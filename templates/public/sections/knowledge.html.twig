{% set knowledges_part_1 = knowledges|slice(0,knowledges|length/2) %}
{% set knowledges_part_2 = knowledges|slice(knowledges|length/2,knowledges|length) %}
<section id="knowledge" class="section">
    <div class="container section-wrapper">
        <div class="section-content">
            <div class="row">
                <div class="col-md-8 col-md-offset-2 text-center">
                    <h2 class="section-title">Knowledge</h2>

                    <p class="section-subtitle">Human behavior flows from three main sources: desire, emotion, and knowledge.</p>

                    <span class="divider center"></span>
                </div>
                <!-- //.col-md-8 -->
            </div>
            <!-- //.row -->

            <!-- BAR CHART START -->
            <div class="row">
                <div class="col-sm-6 col-md-6">
                    <div class="bar-chart">
                        {% for k in knowledges_part_1 %}
                            <div class="item">
                                <h4>{{ k.name }}</h4>

                                <div class="bar">
                                    <span class="percent">{{ k.level }}%</span>
                                    <span class="item-progress" data-percent="{{ k.level }}"></span>
                                </div>
                                <!-- //.bar -->
                            </div>
                        {% endfor %}
                        <!-- //.item -->
                    </div>
                    <!-- //.bar-chart -->
                </div>
                <!-- //.col-md-6 -->

                <div class="col-sm-6 col-md-6">
                    <div class="bar-chart">
                        {% for k in knowledges_part_2 %}
                            <div class="item">
                                <h4>{{ k.name }}</h4>

                                <div class="bar">
                                    <span class="percent">{{ k.level }}%</span>
                                    <span class="item-progress" data-percent="{{ k.level }}"></span>
                                </div>
                                <!-- //.bar -->
                            </div>
                        {% endfor %}
                    </div>
                    <!-- //.bar-chart -->
                </div>
                <!-- //.col-md-6 -->
            </div>
            <!-- //BAR CHART END -->
        </div>
        <!-- //.section-content -->
    </div>
    <!-- //.container -->

</section>